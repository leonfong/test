<% content_for :erp_header do %>
    <%= render partial: "work_flow/erp_header", locals: {selected: "my_work"} %>
<% end %>
<div class="container-fluid" >

    <div class="row" style="z-index:400;position: fixed;right: 0;left: 0;padding: 10px 20px 0px;margin: 0px;background-color: #f5f5f5;border-radius: 4px;">
        <div class="col-md-6">
            <span class="glyphicon glyphicon-user" style="font-size: 20px;"></span> <%= current_user.full_name %>   
        </div> 
        <div class="col-md-6 " >
            <button  style="margin-bottom: 10px;" type="button" class="btn btn-info btn-sm pull-right" data-toggle="modal" data-target="#edituserinfo" >修改用户信息</button>
        </div>
    </div>



    <div class="row" style="padding: 55px 20px 10px;">
        <div class="col-md-12">
            <div class="row" >  
                <h3><span class="label label-default" >基本资料</span></h3>
            </div>

            <div class="row" style="padding-top: 15px;">  
               <div class="col-md-4">
                   <label>姓名：</label><%= current_user.full_name %>
               </div>
               <div class="col-md-4">
                   <label>所属部门：</label><%= current_user.team %>
               </div>
               <div class="col-md-4">
                   <label>角色：</label>
               </div>
            </div>
            <div class="row" style="padding-top: 15px;">  
               <div class="col-md-4">
                   <label>岗位：</label>
               </div>
               <div class="col-md-4">
                   <label>帐号权限：</label>
               </div>
               <div class="col-md-4">
                   <label>入职时间：</label>
               </div>
            </div>
            <hr/>
            <div class="row" style="padding: 0px;">  
                <h3><span class="label label-default" >帐号密码</span></h3><%= render 'layouts/flash_messages' %>
            </div>
            <div class="row" style="padding-top: 15px;">  
               <div class="col-md-12">
                   <label>邮箱：</label><%= current_user.email %>
               </div>
            </div>
            <div class="row" style="padding-top: 15px;">  
               <div class="col-md-12">
                   <label>手机号码：</label><%= current_user.phone %>
               </div>
            </div>
            <div class="row" style="padding-top: 15px;">
               <div class="col-md-12">
                   <label>密码：</label><button  style="margin-bottom: 10px;" type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#edituserpw" >修改密码</button>
               </div>
            </div>
            <hr/>
            <div class="row" style="padding: 0px;">  
                <h3><span class="label label-default" >其他信息</span></h3>
            </div>
            <div class="row" style="padding-top: 15px;">
               <div class="col-md-12">
                   <label>最后登录时间：</label><%= current_user.last_sign_in_at.localtime.strftime('%Y-%m-%d %H:%M:%S').to_s %>
               </div>
            </div>
            <div class="row" style="padding-top: 15px;">
               <div class="col-md-12">
                   <label>最后登录IP：</label><%= current_user.last_sign_in_ip %>
               </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="edituserinfo" tabindex="-1" role="dialog" aria-labelledby="edituserinfoLabel">
<div class="modal-dialog modal-lg"><small>
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="edituserinfoLabel"><strong>修改用户信息</strong></h4>
        </div>
        
        <div class="modal-body">  
            <%= form_tag({action: :edit_user_info_erp},method:"post") do %>   
            <div class="form-group">         
              <label for="full_name" class="control-label">姓名:</label>
              <input type="text" class="form-control" id="full_name" name="full_name" >
            </div>  
            <div class="form-group">
              <label for="phone" class="control-label">手机号:</label>
              <input type="text" class="form-control" id="phone" name="phone" >
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <input type="submit" class="btn btn-primary" value="Submit" >
        </div>
        <% end %>
    </div></small>
  </div>
</div>


<div class="modal fade" id="edituserpw" tabindex="-1" role="dialog" aria-labelledby="edituserpwLabel">
<div class="modal-dialog modal-lg"><small>
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="edituserpwLabel"><strong>修改用户密码</strong></h4>
        </div>
        
        <div class="modal-body">  
            <%= form_tag({action: :edit_user_pw},method:"post") do %>   
            <div class="form-group">         
              <label for="full_name" class="control-label">姓名:</label>
              <%= current_user.full_name %>
            </div>  
            <div class="form-group">
              <label for="oldpw" class="control-label">原密码:</label>
              <input type="password" class="form-control" autocomplete='off' id="oldpw" name="oldpw" >
            </div>
            <div class="form-group">
              <label for="newpw" class="control-label">新密码:<code>密码必须大于8位</code></label>
              <input type="password" class="form-control" autocomplete='off' id="newpw" name="newpw" >
            </div>
            <div class="form-group">
              <label for="newpwr" class="control-label">重复新密码:</label>
              <input type="password" class="form-control" autocomplete='off' id="newpwr" name="newpwr" >
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <input type="submit" class="btn btn-primary" value="Submit" >
        </div>
        <% end %>
    </div></small>
  </div>
</div>
















