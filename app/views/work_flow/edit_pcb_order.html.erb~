<script>
function postform() {  	         
      html = $("#moko_code").val();     
      //alert(html);
      if (html == "")
      {                    
　　    alert("请选择物料！");                    
　　    return false;                
　     }
      if ($("#qty").val() == "")
      {                    
　　    alert("请填写数量！");                    
　　    return false;                
　     }
      if ($("#follow_remark").html() == "")
      {                    
　　    alert("请填写备注，备注中应包含数量！");                    
　　    return false;                
　     }
}  


$(".menu-first").click(function(){
  $('#userMeun').collapse('hide');
  $('#articleMenu').collapse('hide');
});
   
</script>


