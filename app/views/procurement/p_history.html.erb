<div class="container-fluid" >  
    <div class="row" style="padding: 0px;">
<!--
        <h3><strong>Price History</strong></h3>
-->
        <div class="col-md-1 list-group" style="padding: 0px;">
            <div class="alert alert-info" role="alert"><h3><strong>PCBA业务</strong></h3></div>
            <% if can? :pcb_review, :all %>
            <%= link_to "Order Review", order_review_list_path ,class: "list-group-item"%>
            <% end %>
            <% if can? :pcb_dc, :all %>
            <%= link_to "Order Review DC", order_dc_list_path ,class: "list-group-item"%>
            <% end %>
            <%= link_to "My Order",p_bomlist_path(order_list: true) ,class: "list-group-item"%>
            <%= link_to "New BOM", procurement_new_path, data: { no_turbolink: true } ,class: "list-group-item"%>
            <%= link_to "BOM List", p_bomlist_path ,class: "list-group-item"%> 
            <%= link_to "Price History", p_history_path ,class: "list-group-item active"%>          
        </div>
        <div class="col-md-11" style="padding-top: 10px;">
        <div class="row">
            <div class="col-md-12 col-sm-12 " >
                <%= form_tag('/p_history', method:"get", class:"form-inline") do %>
               <div class="col-md-9 form-group  nav navbar-nav navbar-left">
                  <lable for="order" , class="sr-only">Qrder : </lable>
                  <div class="input-group input-group-sm"> 
                      <span class="input-group-addon " >开始 : </span>
                      <%= text_field_tag :start_date, params[:start_date], id: "start_date",class:"form-control input-sm", size:"10" %>
                      <script type="text/javascript">
                          $(function () {
                            $('#start_date').datetimepicker({
                              useCurrent: false,
                              format: 'YYYY-MM-DD'
                            });    
                          });
                      </script>
                      <span class="input-group-addon " >结束 : </span>
                      <%= text_field_tag :end_date, params[:end_date], id: "end_date",class:"form-control input-sm", size:"10" %>
                      <script type="text/javascript">
                          $(function () {
                            $('#end_date').datetimepicker({
                              useCurrent: false,
                              format: 'YYYY-MM-DD'
                            });    
                          });
                      </script>
             
                  <div class="input-group-addon"> 
                      <%= radio_button :order_s, :order_s, '1'  , :checked => @order_check_1 %>
                      <%=  'MOKO Part' %>
                      <%= radio_button :order_s, :order_s, '2' , :checked => @order_check_2 %> 
                      <%= '描述' %>
                  </div> 
            
                  <% if @part_name %>   
                      <%= text_field_tag :part_name, @part_name, class:"form-control  input-lg", size:"30"%>     
                  <% else %> 
                      <%= text_field_tag :part_name, params[:part_name], class:"form-control input-lg", size:"30"%>
                  <% end %>               
                  <div class="input-group-btn">
                      <%= submit_tag "搜索", class:"btn btn-primary btn-sm" %>
                  </div>
                </div>
            </div>
            <% end %>
            </div>
        </div>



<% if @p_history %>
<%= will_paginate(@p_history) %>            
<table class="table ">
  <thead>
    <tr style="background-color: #eeeeee">
      <th>Created Date</th>
      <th>MPN</th>
      <th>DES</th>
      <th>QTY</th>
      <th>Order No.</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @p_history.each do |bom| %>
        <tr>
            <td><%= bom.created_at.localtime.strftime('%Y-%m-%d %H:%M:%S').to_s %></td>
            <td><%= bom.mpn %></td>
            <td><%= bom.description %></td>
            <td><%= bom.quantity %></td>
            <td><%= ProcurementBom.find(bom.procurement_bom_id).p_name %></td>
            <td><%= bom.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
        </div>
    </div>
</div>
<%
meta title: "Quick Turn PCB Prototype and Electronic PCB Assembly Service| Fastbom.com.",
     description: "Fastbom offers Quick Turn PCB Prototype and Electronic PCB Assembly Service in low to mid volumes including PCB fabrication, parts procurement and final assembly. upload your Bill of Materials (BOM), Assembly Drawing, Fabrication Drawing (used to do incoming inspection of your PCB),  to get a fast quote.",
     keywords: "pcb assembly service, pcb assembly services, pcb assemblies, electronic assemblies, electronic assembly services, pcb prototype services, pcb prototype  service"
%>




















