    <td>位号</td>
    <td>华创编码</td>
    <td>华创描述</td>
    <td>用量</td>
  </tr>
<% if not@get_ecn_item.blank?%>
<% @get_ecn_item.each_with_index do |item,index| %>
  <tr>
                                        <td><%= index+1 %></td>
                                        <td style="word-break : break-all; "><%= item.old_part_code %></td>
                                        <td style="word-break : break-all; "><%= item.old_moko_part %></td>
                                        <td style="word-break : break-all; "><%= item.old_moko_des %></td>
                                        <td><%= item.old_quantity %></td>
                                        <td style="word-break : break-all; "><%= item.new_part_code %></td>
                                        <td style="word-break : break-all; "><%= item.new_moko_part %></td>
                                        <td style="word-break : break-all; "><%= item.new_sell_des %></td>
                                        <td><%= item.new_quantity %></td>
                                        <td style="word-break : break-all; "><%= item.remark %></td>
  </tr>
<% end %>
<% end %>
  <tr>
    <td colspan="10" >备注</td>
  </tr>
  <tr>
    <td colspan="10">收发单位：        
        <input type="checkbox">生产
        <input type="checkbox">订单部
        <input type="checkbox">采购部
        <input type="checkbox">仓库
    </td>
  </tr>
</table>
</small> 


        </div>
    </div>
</div>
