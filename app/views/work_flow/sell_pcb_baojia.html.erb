<% @quate.each do |q_order| %>
                            <tr>
                                <td><%= q_order.c_no %></td>
                                <td><%= q_order.customer %></td>
                                <td><%= q_order.customer_com %></td>
                                <td><%= q_order.customer_country %></td>
                                <td><%= q_order.email %></td>
                                <td><%= q_order.shipping_address %></td>
                                <td><%= User.find_by(email: q_order.sell).full_name %></td>
                                <td><%= q_order.qty %></td>
                                <td>
