<% if @bom_item.cost.blank? %>
    document.getElementById('<%= @bom_item.id.to_s + "p" %>').value='0';
    document.getElementById('<%= @bom_item.id.to_s + "p_t" %>').innerHTML='￥0';
<% else %>
    document.getElementById('<%= @bom_item.id.to_s + "p_t" %>').innerHTML='<%= "￥"+(@bom_item.cost*@bom.qty*@bom_item.quantity).to_s %>';
    document.getElementById('<%= @bom_item.id.to_s + "p" %>').value='<%= @bom_item.cost.to_s %>';
<% end %>





<% PDn.where(p_item_id: @bom_item.id).each do |ppp| %>
    <% if ppp.color == "g" %>
        document.getElementById('<%= @bom_item.id.to_s + "_" + ppp.id.to_s %>').className="bg-success";
        //$("#<%= @bom_item.id.to_s + "_" + ppp.id.to_s %>").attr("class","bg-success");
    <% elsif ppp.color == "b"  %>
        document.getElementById('<%= @bom_item.id.to_s + "_" + ppp.id.to_s %>').className="bg-info";
        //$("#<%= @bom_item.id.to_s + "_" + ppp.id.to_s %>").attr("class","bg-info");
    <% elsif ppp.color == "y"  %>
        document.getElementById('<%= @bom_item.id.to_s + "_" + ppp.id.to_s %>').className="bg-warning";
        //$("#<%= @bom_item.id.to_s + "_" + ppp.id.to_s %>").attr("class","bg-warning");
    <% else %>
        document.getElementById('<%= @bom_item.id.to_s + "_" + ppp.id.to_s %>').className="";
        //$("#<%= @bom_item.id.to_s + "_" + ppp.id.to_s %>").attr("class","");
    <% end %> 
<% end %>
document.getElementById('<%= @bom_item.id.to_s + "_tr" %>').className="bg-info";
document.getElementById('<%= @bom_item.id.to_s + "_other" %>').className="col-md-12 bg-info";
//document.getElementById('<%= @bom_item.id.to_s + "_" + @add_dns.id.to_s %>').className="bg-info";






document.getElementById('matched').innerHTML='<%= @match_str_nn %>';
document.getElementById('total_price').innerHTML='<%=  number_with_precision(@total_price_nn, precision: 4)%>';







<% if @bom_item.product_id != 0 %>
    <% if not Product.find_by_id(@bom_item.product_id).blank? %>
        document.getElementById('<%= @bom_item.id.to_s + "d" %>').innerHTML='<%= Product.find_by_id(@bom_item.product_id).description %>';
        $("#<%= @bom_item.id.to_s + 'd' %>").attr("data-content","<%= Product.find(@bom_item.product_id).name %>");
    <% else %>
        document.getElementById('<%= @bom_item.id.to_s + "d" %>').innerHTML='';
        $("#<%= @bom_item.id.to_s + 'd' %>").attr("data-content","");
    <% end %> 
<% else %>
    document.getElementById('<%= @bom_item.id.to_s + "d" %>').innerHTML='';
    $("#<%= @bom_item.id.to_s + 'd' %>").attr("data-content","");
<% end %>





