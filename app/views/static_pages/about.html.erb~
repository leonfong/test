<table class="table">
  <thead>
    <tr>
      <th>Part</th>
      <th>Manufacturer</th>
      
      <th>Authorized Distributor</th>
      <th>Description</th>
      <th>Price</th>
      
    </tr>
  </thead>
  <tbody>
    <% @server_response['results'].each do |result| %>
        <% result['items'].each do |part| %>
          <tr>
            <td><p class="text-info"><%= part['mpn'] %></p></td>
            <td><p class="text-info"><%= part['brand']['name'] %></p></td>
            <% for f in part['offers'] %>
                <% if f['_naive_id'] == @naive_id %>
                    
                    <td><p class="text-info"><%= f['seller']['name'] %></p></td> 
                    <% d_value = "" %> 
                    <% for d in part['descriptions'] %>     
                        <% if d['attribution']['sources'][0]['name'] == f['seller']['name'] %>
                            <% d_value = d['value'] %>  
                        <% end %>
                    <% end %>  
                    <td><p class="text-info"><%= d_value %></p></td>
                    <td><p class="text-info">$<%= f['prices']['USD'][-1][-1] %></p></td>
                    
                 <% end %>
            <% end %>  
            
          </tr>
        <% end %>
      <% end %>
  </tbody>
</table>
