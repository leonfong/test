<script type="text/javascript">
function postform() {  	         
    html = my_feedback.html();     
<% if @topic.feedback_type == @topic.feedback_receive %>
    if (document.getElementById('topic_state_close').checked == false & document.getElementById('topic_state_open').checked == false)
      {                    
　　    alert("请选择是否要关闭问题！");                    
　　    return false;                
　     } 
    else if (document.getElementById('topic_state_open').checked == true & html == "")
      {                    
　　    alert("请填写回复的内容！");                    
　　    return false;                
　     }   
<% else %>  
      if (html == "")
      {                    
　　    alert("请填写回复的内容！");                    
　　    return false;                
　     }
<% end %>
}    
</script>
